<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://kit.fontawesome.com/e022b13276.js" crossorigin="anonymous"></script>
    <link rel="icon" href="~/Images/NewDefault.jpg" type="image/png">
    <link rel="stylesheet" href="~/css/catalog.css" />
    <script src="~/js/JavaScript.js" asp-append-version="true"></script>
    
</head>
<body class="bg-gray-100 pt-24 pb-24 bg-cover bg-no-repeat " style="background-image: url('../Images/bg2.jpg'); background-size: cover; background-repeat: no-repeat;">

    <header class="bg-orange-500 fixed top-0 w-full z-50 bg-opacity-90 backdrop-blur-md shadow-lg">
        <div class="container mx-auto flex items-center justify-between p-2">
            <a href="@Url.Action("Index", "Home")" class="flex items-center">
                <img src="~/Images/logo.jpg" class="h-20" asp-append-version="true" alt="Logo" />
                <span class="text-white text-xl ml-2">Pet Shop</span>
            </a>
            <nav class="flex gap-2">
                <a href="@Url.Action("Index", "Home")" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-1 px-3 rounded text-sm">Home</a>
                <a href="@Url.Action("Index", "Catalog")" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-1 px-3 rounded text-sm">Catalog</a>
                <a href="@Url.Action("Index", "Admin")" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-1 px-3 rounded text-sm">Administration</a>
            </nav>

        </div>
    </header>

    <main class="container mx-auto p-4 bg-white bg-opacity-75 shadow-md rounded">
        <div>
            @RenderBody()
        </div>
    </main>

    <footer class="bg-gradient-to-r from-orange-500 to-yellow-500 text-white text-center p-4 fixed bottom-0 w-full shadow-md">
        <div class="max-w-7xl mx-auto ">
            &copy; @DateTime.Now.Year - Pet Shop. All rights reserved.
        </div>
    </footer>

</body>
</html>
